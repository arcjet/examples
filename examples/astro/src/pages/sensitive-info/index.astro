---
import Layout from "../../layouts/Main.astro";
import WhatNext from "../../components/WhatNext.astro";
---

<Layout>
  <main class="page">
    <main class="page">
      <div class="section">
        <h1 class="heading--primary">
          Arcjet sensitive info detection example
        </h1>
        <p class="typography--primary">
          This form uses{" "}
          <a
            href="https://docs.arcjet.com/sensitive-info/concepts"
            class="link"
          >
            Arcjet&apos;s sensitive info detection
          </a>{" "}
          feature which is configured to detect credit card numbers. It can be
          configured to detect other types of sensitive information and custom
          patterns.
        </p>
        <p class="typography--secondary">
          The request is analyzed entirely on your server so no sensitive
          information is sent to Arcjet.
        </p>
      </div>

      <hr class="page__divider" />

      <div class="section">
        <h2 class="heading--secondary">Try it</h2>

        <form class="form" id="form-sensitive-info">
      <div class="form__field">
        <label class="form__label">
          Message
          <textarea
            placeholder="Please enter your message."
            class="form__textarea"
            name="supportMessage"
          >I ordered a hat from your store and would like to request a refund. My credit card number is 4111111111111111</textarea>
        </label>
      </div>
      <button type="submit" class="button button--primary form__button">
        Submit
      </button>
    </form>
    <script>
        import { isInputError } from "astro:actions";
        import { actions } from "astro:actions";
        import { navigate } from 'astro:transitions/client';

        const form: HTMLFormElement = document.querySelector("#form-sensitive-info")!;
        let formErrorElement: HTMLElement | null = null;
        form.addEventListener("submit", async (event) => {
          event.preventDefault();
            const formData = new FormData(form);

          const { error } = await actions.sensitiveInfo(formData);

          if (!error) {
            return navigate('/sensitive-info/submitted');
          }

          if (!formErrorElement) {
            formErrorElement = document.createElement('div');
            formErrorElement.className = 'form__error';
            const labelElement = form.querySelector('.form__label')!;
            labelElement.insertAdjacentElement('afterend', formErrorElement);
          }

          if (error && isInputError(error)) {
            formErrorElement.textContent = error.issues.at(0)!.message;
          } else if (error) {
            formErrorElement.textContent = error.message;
          }
        });
      </script>
      </div>
      <hr class="page__divider" />
      <div class="section">
        <h2 class="heading--secondary">See the code</h2>
        <p class="typography--secondary">
          The{" "}
          <!-- TODO: Update link -->
          <a
            href="https://github.com/arcjet/example-nextjs/blob/main/app/sensitive-info/test/route.ts"
            target="_blank"
            rel="noreferrer"
            class="link"
          >
            API route
          </a>{" "}
          imports a{" "}
          <!-- TODO: Update link -->
          <a
            href="https://github.com/arcjet/example-nextjs/blob/main/lib/arcjet.ts"
            target="_blank"
            rel="noreferrer"
            class="link"
          >
            centralized Arcjet client
          </a>{" "}
          which sets base rules.
        </p>
      </div>
      <hr class="page__divider" />
      <WhatNext />
  </main>
</Layout>